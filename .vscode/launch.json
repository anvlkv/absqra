{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "pickTest",
            "type": "promptString",
            "default": "",
            "description": "Enter test name or leave empty",
        },
        {
            "id": "pickPackage",
            "type": "pickString",
            "default": "ra_interactive",
            "options": [
                "ra_lexer",
                "ra_tree_parser",
                "ra_parser",
                "ra_interactive",
                "ra_dev_tools"
            ],
            "description": "select package to attach debugger",
        }
    ],
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach to...",
            "program": "${workspaceFolder}/src/lib/${input:pickPackage}",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug program in 'ra_dev_tools/example_files_macro'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=example_files_macro",
                    "--package=example_files_macro"
                ],
                "filter": {
                    "name": "example_files_macro",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/src/lib/ra_dev_tools/src/lib/example_file_macro",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ra_lexer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=ra_lexer"
                ],
                "filter": {
                    "name": "ra_lexer",
                    "kind": "lib"
                }
            },
            "args": [
                "${input:pickTest}"
            ],
            "cwd": "${workspaceFolder}/src/lib/ra_lexer"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ra_parser'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=ra_parser"
                ],
                "filter": {
                    "name": "ra_parser",
                    "kind": "lib"
                }
            },
            "args": [
                "${input:pickTest}"
            ],
            "cwd": "${workspaceFolder}/src/lib/ra_parser"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ra_tree_parser'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=ra_tree_parser"
                ],
                "filter": {
                    "name": "ra_tree_parser",
                    "kind": "lib"
                }
            },
            "args": [
                "${input:pickTest}"
            ],
            "cwd": "${workspaceFolder}/src/lib/ra_tree_parser"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ra_interactive'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ra_interactive",
                    "--package=ra_interactive"
                ],
                "filter": {
                    "name": "ra_interactive",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/src/lib/ra_interactive"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ra_interactive'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ra_interactive",
                    "--package=ra_interactive"
                ],
                "filter": {
                    "name": "ra_interactive",
                    "kind": "bin"
                }
            },
            "args": [
                "${input:pickTest}"
            ],
            "cwd": "${workspaceFolder}/src/lib/ra_interactive"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'absQra'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=absQra",
                    "--package=absQra"
                ],
                "filter": {
                    "name": "absQra",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'absQra'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=absQra",
                    "--package=absQra"
                ],
                "filter": {
                    "name": "absQra",
                    "kind": "bin"
                }
            },
            "args": [
                "${input:pickTest}"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}